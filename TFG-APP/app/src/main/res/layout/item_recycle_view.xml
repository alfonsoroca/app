<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewOut"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:alpha="0.8"
        android:clickable="true"
        card_view:cardBackgroundColor="@color/teal_700"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="5dp"
        card_view:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="date"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                card_view:flow_verticalAlign="center"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.05"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_noWorkDay"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="permiso"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                card_view:flow_verticalAlign="center"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.9"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textview_entry"
                android:layout_width="120dp"
                android:layout_height="23dp"
                android:text="entry"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.95"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.15"/>

            <TextView
                android:id="@+id/textview_out"
                android:layout_width="120dp"
                android:layout_height="23dp"
                android:text="out"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.95"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.8" />

            <View
                android:id="@+id/divider"
                android:layout_width="4dp"
                android:layout_height="66dp"
                android:background="@color/white"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.5"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>