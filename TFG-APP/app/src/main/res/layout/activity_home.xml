<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/color_background">

    <RelativeLayout
        style="@style/headerRLO"
        android:id="@+id/newPassRL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/header"
            android:text="MenÃº" />

    </RelativeLayout>


    <Button
        android:id="@+id/registrationHomeBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_round_dark"
        android:text="registro horario"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassRL" />

    <Button
        android:id="@+id/listHomeBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/button_round_dark"
        android:text="listado registros"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassRL" />

    <Button
        android:id="@+id/registrationDofBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_round_dark"
        android:text="solicitar permisos"
        android:fontFamily="@font/roboto"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationHomeBT" />

    <Button
        android:id="@+id/holidayHomeBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/button_round_dark"
        android:text="solicitar vacaciones"
        android:fontFamily="@font/roboto"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listHomeBT" />

    <Button
        android:id="@+id/profileHomeBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_round_dark"
        android:text="Usuario"
        android:fontFamily="@font/roboto"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationDofBT" />

    <Button
        android:id="@+id/exitHomeBT"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_round_red"
        android:text="salir"
        android:fontFamily="@font/roboto"
        android:textColor="@color/color_background"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/holidayHomeBT" />


</androidx.constraintlayout.widget.ConstraintLayout>